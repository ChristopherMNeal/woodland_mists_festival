<h1>Woodland Mists Festival</h1>

  <h3>Stages</h3>
    <% if @stages.any? %>
      <ul>
        <% @stages.each do |stage| %>
          <li><a href="/stages/<%= stage.id %>"><%= stage.name %></a></li>
        <% end %>
      </ul>
    <% else %>
      <p>There are currently no stages to display.</p>
    <% end %>

    <a href="/stages/new">Add a new stage</a>